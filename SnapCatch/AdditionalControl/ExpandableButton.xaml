<UserControl x:Class="SnapCatch.AdditionalControl.ExpandableButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SnapCatch.AdditionalControl"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="50" x:Name="MainCtrl" Background="{DynamicResource ControlBackgroundBrush}">
    <Border BorderThickness="0,0,0,1" BorderBrush="{DynamicResource AccentColorBrush}">
        <ContentControl>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <ContentPresenter Content="{Binding AdditionalContent, ElementName=MainCtrl}" Grid.Column="0" x:Name="ContentPresenter">


                </ContentPresenter>
                <Button Style="{StaticResource MetroFlatAccentButton}" Margin="0,0,0,0" Click="Button_Click" BorderThickness="0" Grid.Column="1"></Button>
            </Grid>
        </ContentControl>
    </Border>
</UserControl>
